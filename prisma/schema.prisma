generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
}

model ClientApp {
  id           String @id @default(uuid())
  name         String
  clientId     String @unique
  clientSecret String
  redirectUri  String 
}